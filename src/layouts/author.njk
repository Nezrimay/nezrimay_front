---
layout: page.njk
---

{% include 'header.njk' %}

<main class="author articles">
	<ul class="articles__tags-list">
		{% for tag in pageTags %}
		<li class="articles__tags-item">
			<a href="{{ tag.link }}" class="articles__tags-link grotesk grotesk-b2">
				{{ tag.name }}
			</a>
		</li>
		{% endfor %}
	</ul>

	<div class="author__info">
		<h1 class="author__name grotesk grotesk-h1">{{ title }}</h1>
		<p class="author__city grotesk grotesk-b2 grotesk_secondary">{{ city }}</p>
		<p class="author__description grotesk grotesk-b1">{{ description }}</p>

		<ul class="author__social-list">
			{% for item in socialList %}
			<li class="author__social-item">
				<a
					href="{{ item.url }}"
					target="_blank"
					class="author__social-link grotesk grotesk-nav grotesk_secondary"
					>{{ item.text }}</a
				>
			</li>
			{% endfor %}
		</ul>

		<div class="author__content">
			{{ content | safe }}
		</div>

		{% if collections[id] | length %}

		<div class="author__works works">
			<p class="works__text grotesk grotesk-b1 grotesk_secondary">Работы</p>
			<ul class="works__list">
				{% for work in collections[id] %}
				<li class="works__item">
					<a href="{{ work.url }}" target="_blank" class="work">
						<img
							class="work__img"
							src="{{ work.url }}{{ work.data.picture.src }}"
							alt="Работа автора - {{
								work.data.picture.author
							}}, название работы: {{ work.data.picture.name }}"
							width="250"
							height="250"
						/>
						<p class="work__title grotesk grotesk-nav">{{ work.data.title }}</p>
					</a>
				</li>
				{%endfor%}
			</ul>
		</div>

		{% endif %}
	</div>
</main>

{% include 'footer.njk' %}
