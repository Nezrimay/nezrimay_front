---
layout: page.njk
permalink: /tags/
title: 'Тексты'
---

{% include 'header.njk' %}

<main class="authors-page">
	<h1 class="visually-hidden">Тексты</h1>
	{% for tag in constant['listTag'] %} {% if collections[tag] | length %}
	<section class="tag-page__section">
		<h2 class="best-pages__title grotesk grotesk-h1">
			{{ constant[tag] }}
		</h2>
		<ul class="best-pages__list">
			{%for art in collections[tag]%}
			<li class="best-pages__item">
				<a href="{{ art.url }}">
					<div class="pages">
						<img
							class="pages__img"
							style="width: 31.25rem; height: 31.25rem"
							src="{{ art.url }}{{ art.data.picture.src }}"
						/>
						<div class="pages__wrapper-text">
							<div class="pages__tags">{{ constant[tag] }}</div>
							<p class="pages__title grotesk grotesk-nav">
								{{ art.data.title }}
							</p>
							<p class="pages__date grotesk grotesk_secondary grotesk-b2">
								{{ art.date | transformDate }}
							</p>
						</div>
					</div>
				</a>
			</li>
			{%endfor%}
		</ul>
		<div class="best-pages__link-wraper">
			<a href="/tag/{{ tag }}" class="best-pages__link grotesk grotesk-b1">
				{{ constant['all-' + tag] }}
			</a>
		</div>
	</section>
	{% endif%} {% endfor %}
</main>

{% include 'footer.njk' %}
